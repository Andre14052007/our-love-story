---
import Layout from '../layouts/Layout.astro';
import Nav from '../components/Nav.astro';
import Footer from '../components/Footer.astro';

const storyEvents = [
    {
        date: 'First Meeting',
        title: 'How We Met',
        description: 'The story of how our paths crossed and our journey began...',
        image: 'https://images.unsplash.com/photo-1522673607200-164d1b6ce486'
    },
    {
        date: 'First Date',
        title: 'A Perfect Evening',
        description: 'Our first date was magical, filled with laughter and endless conversations...',
        image: 'https://images.unsplash.com/photo-1519741497674-611481863552'
    },
    {
        date: 'Special Moment',
        title: 'When We Knew',
        description: 'That special moment when we both knew this was something extraordinary...',
        image: 'https://images.unsplash.com/photo-1518621736915-f3b1c41bfd00'
    }
];
---

<Layout title="Our Story">
    <Nav />
    <main class="pt-20 min-h-screen bg-gradient-to-b from-black to-gray-900">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
            <h1 class="text-5xl md:text-6xl font-playfair mb-6 bg-gradient-to-r from-rose-300 to-purple-300 text-transparent bg-clip-text text-center">
                Our Story
            </h1>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto text-center mb-16">
                Every love story is beautiful, but ours is my favorite
            </p>

            <div class="space-y-24">
                {storyEvents.map((event, index) => (
                    <div class="relative">
                        <!-- Timeline line -->
                        <div class="absolute left-1/2 transform -translate-x-1/2 h-full w-px bg-gradient-to-b from-rose-500 to-purple-500"></div>

                        <div class:list={[
                            'flex flex-col md:flex-row items-center gap-8',
                            index % 2 === 1 ? 'md:flex-row-reverse' : ''
                        ]}>
                            <!-- Image -->
                            <div class="w-full md:w-1/2">
                                <div class="group relative overflow-hidden rounded-2xl">
                                    <div class="absolute inset-0.5 bg-gradient-to-r from-rose-500 to-purple-500 rounded-2xl blur opacity-30 group-hover:opacity-100 transition duration-1000"></div>
                                    <div class="relative aspect-[4/3] overflow-hidden rounded-2xl">
                                        <img
                                            src={event.image}
                                            alt={event.title}
                                            class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700"
                                        />
                                    </div>
                                </div>
                            </div>

                            <!-- Content -->
                            <div class="w-full md:w-1/2 text-center md:text-left">
                                <span class="inline-block text-rose-500 font-medium mb-2">{event.date}</span>
                                <h2 class="text-3xl md:text-4xl font-playfair text-white mb-4">{event.title}</h2>
                                <p class="text-gray-400 text-lg leading-relaxed">{event.description}</p>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </div>
    </main>
    <Footer />
</Layout>

<style>
    .timeline-item {
        opacity: 0;
        transform: translateY(20px);
        animation: fadeInUp 1s ease forwards;
    }

    @keyframes fadeInUp {
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
